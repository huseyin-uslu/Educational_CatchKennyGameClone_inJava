            tools:layout_editor_absoluteY="95dp" />

        <ImageView
            android:id="@+id/iV7"
            android:layout_width="114dp"
            android:layout_height="116dp"
            android:onClick="scorePoint"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/fattony"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="95dp" />

        <ImageView
            android:id="@+id/iV8"
            android:layout_width="114dp"
            android:layout_height="116dp"
            android:onClick="scorePoint"
            app:srcCompat="@drawable/fattony"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="95dp" />

        <ImageView
            android:id="@+id/iV9"
            android:layout_width="114dp"
            android:layout_height="116dp"
            android:onClick="scorePoint"
            app:srcCompat="@drawable/fattony"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="95dp" />

        <ImageView
            android:id="@+id/iV10"
            android:layout_width="114dp"
            android:layout_height="116dp"
            android:onClick="scorePoint"
            app:layout_column="0"
            app:layout_row="3"
            app:srcCompat="@drawable/fattony"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="95dp" />

        <ImageView
            android:id="@+id/iV11"
            android:layout_width="114dp"
            android:layout_height="116dp"
            android:onClick="scorePoint"
            app:srcCompat="@drawable/fattony"
